<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        https://material.io/develop/android/theming/dark
    -->

    <!-- TermuxApp Light DarkActionBar theme -->
    <style name="Theme.TermuxApp.Light.DarkActionBar"
        parent="Theme.BaseActivity.Light.DarkActionBar" />

    <!-- TermuxApp Light NoActionBar theme -->
    <style name="Theme.TermuxApp.Light.NoActionBar"
        parent="Theme.BaseActivity.Light.NoActionBar" />

    <!-- TermuxApp DayNight DarkActionBar theme -->
    <style name="Theme.TermuxApp.DayNight.DarkActionBar"
        parent="Theme.BaseActivity.DayNight.DarkActionBar" />

    <!-- TermuxApp DayNight NoActionBar theme -->
    <style name="Theme.TermuxApp.DayNight.NoActionBar"
        parent="Theme.BaseActivity.DayNight.NoActionBar" />

    <!-- ========================================================= -->
    <!-- MAIN TERMUX ACTIVITY THEME (THIS ONE IS USED)             -->
    <!-- ========================================================= -->

    <style name="Theme.TermuxActivity.DayNight.NoActionBar"
        parent="Theme.TermuxApp.DayNight.NoActionBar">

        <!-- App background -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- STATUS BAR (WHITE + DARK ICONS) -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- NAVIGATION BAR (WHITE + DARK ICONS) -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Avoid action mode toolbar pushing down terminal content -->
        <item name="android:windowActionModeOverlay">true</item>

        <!-- Activity transitions -->
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>

        <!-- Left drawer -->
        <item name="buttonBarButtonStyle">
            @style/TermuxActivity.Drawer.ButtonBarStyle.Light
        </item>
        <item name="termuxActivityDrawerBackground">@color/white</item>
        <item name="termuxActivityDrawerImageTint">@color/black</item>

        <!-- EXTRA KEYS (WHITE THEME) -->
        <item name="extraKeysButtonTextColor">@color/black</item>
        <item name="extraKeysButtonActiveTextColor">@color/red_400</item>
        <item name="extraKeysButtonBackgroundColor">@android:color/white</item>
        <item name="extraKeysButtonActiveBackgroundColor">@color/grey_300</item>

    </style>

</resources>
